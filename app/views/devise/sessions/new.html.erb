<center><h2>Sign in</h2></center>

<center>
<div class="sign-in">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>
  <%= f.email_field :email, :class=> "input_field", :autofocus => true, :placeholder => "Email"%></div>

  <br><div>
  <%= f.password_field :password, :class=> "input_field", :placeholder => "Password" %></div>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</center>
