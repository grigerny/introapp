<center>
<% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
<% end %>
</center>

<div class="resize-for-mobile">
<center><%= image_tag "yointro-logo.png" %></center>
</div>

<div class="hide-for-mobile">
<br>
<%= link_to '/contacts/gmail' do %>
<center>
<%= image_tag('google_contacts.png')%><br>
<%= "Import Google Contacts" %>
</center>
<% end %>
<center>
	
</div>

<div class="row-fluid">
<%= form_for(@intro) do |f| %>
  <% if @intro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@intro.errors.count, "error") %> prohibited this intro from being saved:</h2>

      <ul>
      <% @intro.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<br><br>
<div class="row-fluid">
	
		<div class="span3 offset2">
			 
			<div class="person1-title"><i class="fa fa-user"> Person 1</i></div><br>
			<div class="person1">
			<%= f.text_field :person1_name, :class=> "input_field", :placeholder => "Name:" %>
			  <% if @contact_emails.blank? %>
			<%= f.text_field :person1_email, :class=> "input_field", :placeholder => "Email:" %>
			<% else %>
			<%= f.text_field :person1_email, :class=> "input_field", :placeholder => "Search Google Contacts..." %>
			<% end %>
			</div>
		</div>



			<div class="span3 offset2">	

				<div class="person2-title"><i class="fa fa-user"> Person 2</i></div><br>
				<div class="person2">
				<%= f.text_field :person2_name, :class=> "input_field", :placeholder => "Name:"  %><br>
				  <% if @contact_emails.blank? %>
				<%= f.text_field :person2_email, :class=> "input_field", :placeholder => "Email:"  %>
				<% else %>
				<%= f.text_field :person2_email, :class=> "input_field", :placeholder => "Search Google Contacts..." %>
				<% end %>
				</div>
			</div>	
			
</div>
			
<div class="row-fluid">	
	
	<div class="row-fluid">
	<center>
	<div class="choose-message">
		Choose a Message
	</div>
	</center>
	</div>
	
	<div class="row-fluid">
	<center>
	<div class="choose-message-2">
	(Don't worry, you'll be able to edit this)
	</div>
	</center>
	</div>
	
<br>
	
<div class="span8 offset2">		
<%= f.select :email_subject,  options_for_select(["I really think you guys should meet!","I think you should connect and explore synergies.", "I'm excited to connect you, please reach out to one another so you can explore business opportunities."]), {}, { :class => 'selectpicker' } %>
</div>
</div>

<br><br>
  <div class="actions">
	<center>
    <%= f.submit "Preview Email", :class => "update-button" %>
	</center>
  </div>
<% end %>
</div>

<script>
jQuery(document).ready(function() {
    jQuery('.gmaillink').trigger('click');
});
jQuery(document).on("page:load ready", loaded);
</script>


<% if @contact_emails.blank? == false %>

<script>
  $(function() {
    var availableTags = <%= raw @contact_emails.reject(&:blank?).to_json %>  
    $( "#intro_person2_email" ).autocomplete({
    source: availableTags
    });

    $( "#intro_person1_email" ).autocomplete({
    source: availableTags
    });
});
</script>

<% end %>
