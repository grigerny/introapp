<center>
<% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
<% end %>
</center>

<center><%= image_tag "yointro-logo.png" %></center>
<br>
<%= link_to '/contacts/gmail' do %>
<center><%= image_tag('google_contacts.png')%></center>
<% end %>
<center><%= link_to "Load Your Google Contacts","/contacts/gmail" %>	</center>
<div class="row-fluid">
<%= form_for(@intro) do |f| %>
  <% if @intro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@intro.errors.count, "error") %> prohibited this intro from being saved:</h2>

      <ul>
      <% @intro.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<br><br>
<div class="row-fluid">
		<div class="span3 offset2">
			<i class="fa fa-user"> </i> 
			<div class="person1-title">Person 1</div><br>
			<div class="person1">
			Name:
			<%= f.text_field :person1_name, :class=> "input_field" %><br>
			Email:
			  <% if @contact_emails.blank? %>
			<%= f.text_field :person1_email, :class=> "input_field" %>
			<% else %>
			<%= f.text_field :person1_email, :class=> "input_field", :placeholder => "Search Google Contacts..." %>
			<% end %>
			</div>
		</div>



			<div class="span3 offset2">	
				<i class="fa fa-user"> </i>
				<div class="person2-title">Person 2</div>
				<div class="person2">
				Name:
				<%= f.text_field :person2_name, :class=> "input_field" %><br>
				Email:
				  <% if @contact_emails.blank? %>
				<%= f.text_field :person2_email, :class=> "input_field" %>
				<% else %>
				<%= f.text_field :person2_email, :class=> "input_field", :placeholder => "Search Google Contacts..." %>
				<% end %>
				</div>
			</div>	
</div>
			
<div class="row-fluid">	
<center><h2>Choose a Message <h2></center>
<center><h5>Don't worry you can edit this later</h5></center>
<div class="span8 offset2">		
<%= f.select :email_subject,  options_for_select(["I really think you guys should meet!","I think you should connect and explore synergies.", "I'm excited to connect you, please reach out to one another so you can explore business opportunities."]), {}, { :class => 'selectpicker' } %>
</div>
</div>

<br><br>
  <div class="actions">
	<center>
    <%= f.submit "Preview Email", :class => "update-button" %>
	</center>
  </div>
<% end %>
</div>

<% if @contact_emails.blank? == false %>

<script>
  $(function() {
    var availableTags = <%= raw @contact_emails.reject(&:blank?).to_json %>  
    $( "#intro_person2_email" ).autocomplete({
    source: availableTags
    });

    $( "#intro_person1_email" ).autocomplete({
    source: availableTags
    });
});
</script>

<% end %>
