<h1>Introductions</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
	<% if user_signed_in? %>
    <% current_user.intros.each do |intro| %>
      <tr>
		<td><%= intro.person1_name %> & <%= intro.person2_name%></td>
        <td><%= link_to 'Show', intro %></td>
        <td><%= link_to 'Edit', edit_intro_path(intro) %></td>
        <td><%= link_to 'Destroy', intro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	<% end %>
  </tbody>
</table>

<br>

