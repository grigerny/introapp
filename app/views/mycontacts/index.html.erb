NEW CONTACT
<% end %>
<br><br>
<%= search_form_for @q do |f| %>

 <%= f.search_field :name_or_referredby_name_cont, :placeholder => "Search"%>


<table class="table table-hover">
     <th><%= sort_link(@q, :name, "NAME") %></th>
     <th><%= sort_link(@q, :referrals_count, "REFERRALS") %></th>
	 <th><%= sort_link(@q, :location, "MET AT") %></th>
	 <th><%= sort_link(@q, :referredby_name, "REFERRED BY") %></th>
	 <th><%= sort_link(@q, :created_at, "DATE ADDED") %></th>
	 <th>DELETE</th>
</table%>




 <tbody>
<% @mycontacts.each do |mycontact| %>
<tr>
<td><%= link_to mycontact.name, mycontact %></td>
		<td><%= mycontact.referrals_count %></td>
		<td><%= best_in_place mycontact, :location, :type => :input %></td>
		<td><%= best_in_place mycontact, :referredby_name, :type => :input %></td>
	    <td><%= mycontact.created_at.strftime("%-m/%d/%Y")%></td>
        <td><%= link_to 'Delete', mycontact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>     
    <% end %>
      </tbody>
</table> 

  <% end %>